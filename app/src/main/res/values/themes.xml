        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/nymea_backdrop</item>
        <item name="android:actionMenuTextAppearance">@color/black</item>
